<!-- 과자 등록하기 -->
<div class="jumbotron">
    <h2> 과자 등록하기 </h2>
    <p class="lead">과자 이름, 이미지 링크와 소개를 등록해주세요</p>
    <!--<form action="/home/create" method= "POST">-->
    <%= form_tag "/home/create", method: "post" do %>
        <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="과자 이름">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="url" placeholder="http://">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="summary" placeholder="간단 요약">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="intro" placeholder="과자 소개" rows=10></textarea>
        </div>
        <br/>
        <button class="btn btn-success">등록하기</button>
    <!--</form>-->
    <% end %>
</div>